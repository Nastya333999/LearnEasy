<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:id="@+id/et_add_new_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_new_words"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_add_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_translation"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/et_add_new_word"
        app:layout_constraintTop_toBottomOf="@+id/et_add_new_word" />

</androidx.constraintlayout.widget.ConstraintLayout>